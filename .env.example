# ============================================
# Restaurant Microservices - Environment Variables
# ============================================
# Copy this file to .env: cp .env.example .env
# Then update the values according to your environment

# ============================================
# API Gateway Configuration
# ============================================
PORT=3000
NODE_ENV=development
AUTH_SERVICE_URL=http://localhost:3001

# ============================================
# Auth Service Configuration
# ============================================
# Note: When running locally, Auth Service will use PORT=3001 (default in code)
# If you set PORT in .env, it will override. For Docker, PORT is set in docker-compose.yml

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASS=postgres
DB_NAME=auth_db
DB_LOGGING=true

# JWT Configuration
JWT_SECRET=supersecret_change_in_production
JWT_EXPIRES_IN=1h

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
